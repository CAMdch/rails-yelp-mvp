<div class="container">
  <div class="container my-3">
    <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @restaurant.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted">Category : <%= @restaurant.category %></h6>
      <p class="card-text">Address : <%= @restaurant.address %></p>
      <p class="card-text">Contact : <%= @restaurant.phone_number %></p>
    </div>
  </div>

  <%= link_to restaurants_path, class: "btn btn-primary my-3" do%>
    <i class="fa-solid fa-rotate-left"></i> Back to list
  <% end %>


  <div class="reviews">
    <h5 class= "mb-3">All reviews</h5>

    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item list-group-item-primary">
          <% review.rating.times do %>
            <i class="fa-solid fa-star"></i>
          <% end %>

          <% (5-review.rating).times do %>
            <i class="fa-regular fa-star"></i>
          <% end %>
          <%= review.content %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="card mt-3">
    <div class="card-body">
      <h5 class = "mt-3">Add a new review</h5>
        <%= simple_form_for [ @restaurant, @review ] do |f| %>
          <%= f.input :rating, input_html: { min: '0', max: '5', step: 'any' } %>
          <%= f.input :content %>
          <%= f.submit "Submit review", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>

</div>
